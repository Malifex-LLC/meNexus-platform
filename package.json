    "name": "Jacob Ross",
    "email": "jacob@malifex.dev",
    "url": "https://malifex.dev"
  },
  "description": "A peer-to-peer social layer for the open internet",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.12.3",
  "engines": {
    "node": ">=18.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6"
  },
  "scripts": {
    "dev:client": "pnpm --filter @menexus/client-web run dev",
    "dev:admin": "pnpm --filter @menexus/admin-web  run dev",
    "dev:synapse": "pnpm --filter @menexus/synapse    run dev",
    "init:synapse-config:local": "node services/synapse/src/utils/initSynapseConfig.local.js",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test"
  }
}
